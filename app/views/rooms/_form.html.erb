<h2>物件一覧</h2>
<%= form_for @room do |f| %>
  <ul>
    <li><%= f.label :物件名 %></li>
    <li><%= f.text_field :name %></li>

    <li><%= f.label :賃料 %></li>
    <li><%= f.text_field :price %>円</li>

    <li><%= f.label :住所 %></li>
    <li><%= f.text_field :address %></li>

    <li><%= f.label :築年数 %></li>
    <li><%= f.text_field :age %>年</li>

    <li><%= f.label :備考 %></li>
    <li><%= f.text_area :comment %></li>
  </ul>

    <%= f.fields_for :places do |p| %>
    <h3>最寄り駅<%= p.index + 1 %></h3>
      <ul>
        <li><%= p.label :路線名 %></li>
        <li><%= p.text_field :train %></li>

        <li><%= p.label :駅名 %></li>
        <li><%= p.text_field :station %></li>

        <li><%= p.label :徒歩分数 %></li>
        <li><%= p.text_field :walk %></li>
      </ul>
    <% end %>
    <li><%= f.submit  %></li>
  <% end %>
